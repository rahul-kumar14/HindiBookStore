@model HindiBookStore.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-4">
    <h1>Delete Book</h1>
    
    <h3 class="text-danger">Are you sure you want to delete this book?</h3>
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>
                
                <dt class="col-sm-3">Author</dt>
                <dd class="col-sm-9">@Model.Author</dd>
                
                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category?.Name</dd>
                
                <dt class="col-sm-3">Genre</dt>
                <dd class="col-sm-9">@Model.Genre</dd>
            </dl>
        </div>
    </div>
    
    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
